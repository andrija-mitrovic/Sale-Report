@model ProductListPagination<RetailIndexViewModel>
@{
    ViewData["Title"] = "Index";
}

<h3>Retail report</h3>
<hr />

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Sifra Robe</th>
                <th scope="col" style="width:130px">Naziv Robe</th>
                <th scope="col">Kolicina</th>
                <th scope="col">Nabavna Vr.</th>
                <th scope="col">Nabavna Cij.</th>
                <th scope="col">MP Cijena</th>
                <th scope="col">MP Vrijed.</th>
                <th scope="col">Ukalk. RUC</th>
                <th scope="col">Kolicina</th>
                <th scope="col">Nabavna Vr.</th>
                <th scope="col">MP Cijena</th>
                <th scope="col">MP Vrijed.</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.sifra</td>
                    <td>@item.naziv</td>
                    <td>@item.ukoli</td>
                    <td>@item.unavr</td>
                    <td>@item.unacj</td>
                    <td>@item.uprcj</td>
                    <td>@item.uprvr</td>
                    <td>@item.urucn</td>
                    <td>@item.ikoli</td>
                    <td>@item.inavr</td>
                    <td>@item.iprcj</td>
                    <td>@item.iprvr</td>
                </tr>
            }
        </tbody>
    </table>


    var disablePrevious = !Model.IsPreviousPageAvailable ? "disabled" : "";
    var disableNext = !Model.IsNextPageAvailable ? "disabled" : "";
    

    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex-1)"
       class="btn btn-info @disablePrevious">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex+1)"
       class="btn btn-info @disableNext">
        Next
    </a>

}
else
{
    <h4>No products...</h4>
}


